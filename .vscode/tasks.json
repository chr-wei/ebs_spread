    "version": "2.0.0",
    "tasks": [
        {
            "label": "Export EbsSpread code",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/d",
                            "/c"
                        ]
                    }
                }
            },
            "presentation": {
                // "reveal": "silent", // To not open a new terminal session and show output
                "clear": true
            },
            "args": [
                "\"${workspaceFolder}\\dev_tools\\XLSX_VBA_EXPORT.vbs\"",
                "\"${workspaceFolder}\\bin\\EbsSpread.xlsm\"",
                "\"${workspaceFolder}\\src\""
            ],
            "command": "CScript",
            "problemMatcher": [],
        },
        {
            "label": "Generate tasks",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/d",
                            "/c"
                        ]
                    }
                }
            },
            "presentation": {
                // "reveal": "silent", // To not open a new terminal session and show output
                "clear": true
            },
            "args": [
                "\"${workspaceFolder}\\dev_tools\\Generate_Tasks.vbs\"",
                "\"${workspaceFolder}\\bin\\EbsSpread.xlsm\""
            ],
            "command": "CScript",
            "problemMatcher": [],
        },
    ]
